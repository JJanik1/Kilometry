<Window x:Class="Settlement_of_kilometers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Settlement_of_kilometers"
        mc:Ignorable="d"
        Title="Home" Height="285.927" Width="250.464" ResizeMode="CanResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition  Height="1*"/>
            <RowDefinition  Height="1*"/>
            <RowDefinition  Height="1*"/>
        </Grid.RowDefinitions>

        <Button x:Name="AddRide"  Content="Dodaj przejazd" Grid.Row="0" Grid.Column="1" Margin="20" Padding="10" Click="AddRide_Click" FontWeight="Bold" />
        <Button x:Name="RideList" Content="Lista przejazdow" Grid.Row="1" Grid.Column="1" Margin="20" Padding="10" FontWeight="Bold" Click="RideList_Click" />
        <Button x:Name="Statistics" Content="Statystyki" Grid.Row="2" Grid.Column="1" Margin="20" Padding="10" FontWeight="Bold" Click="Statistics_Click" />

    </Grid>
</Window>
